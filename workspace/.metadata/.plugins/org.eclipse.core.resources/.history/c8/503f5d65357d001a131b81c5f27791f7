	<script>
		
		$(function(){
			$.ajax({
				url :"BoardList",
				data:"cpage=1"
			}).done(function(data){
/*  				alert(data.trim()); */
				data = JSON.parse(data.trim());
				$.each(data,function(i){
					$("tbody").append("<tr><td>" + data[i].board_no + "</td><td>" 
												 + data[i].board_title + "</td><td>" 
												 + data[i].board_writer + "</td><td>" 
												 + data[i].board_content.replace(/&lt;/g,"<").replace(/&gt;/g,">") + "</td><td>" 
												 + data[i].board_date + "</td><td>" 
												 + data[i].board_cnt + "</td>" 
												 + "<td><button id=\"submitBtn\" onclick=\"location.href='write.html'\">수정</button>&ensp;"
												 + "<button id=\"deleteBtn\">삭제</button></td>"
												 + "</tr>");
					
					$("#deleteBtn").click(function(){
						$.ajax({
							url : "DeleteServlet",
							datatype : "json",
							type : "post",
							data : "board_no="+data[i].board_no
						}).done(function(data){
			 				alert("삭제완료");
						});
					});
				});
			});	 
			
		});
	
	
	</script>
	
